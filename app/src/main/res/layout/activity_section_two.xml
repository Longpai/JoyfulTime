<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".SectionTwoActivity">

    <!-- Left side container: 1/3 width -->
    <LinearLayout
        android:id="@+id/left_menu_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Button 1: Rest -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#FFAB91">

            <View
                android:id="@+id/view_section_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="休息"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFFFFF"
            android:alpha="0.5"/>

        <!-- Button 2: Music -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#A6A6A6">

            <View
                android:id="@+id/view_section21"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="音乐"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFFFFF"
            android:alpha="0.5"/>

        <!-- Button 3: Seat -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#A6A6A6">

            <View
                android:id="@+id/view_section22"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="座椅"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFFFFF"
            android:alpha="0.5"/>

        <!-- Button 4: Light -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#A6A6A6">

            <View
                android:id="@+id/view_section23"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="灯光"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>

    </LinearLayout>

    <!-- Right side content area: 2/3 width -->
    <FrameLayout
        android:id="@+id/right_content"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:background="@drawable/bg_quiet">
        
        <!-- Main Layout with 3 Columns -->
        <LinearLayout
            android:id="@+id/nap_settings_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="32dp">
            
            <!-- Left Column: Seat Buttons -->
            <GridLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:columnCount="2"
                android:rowCount="2">
                
                <!-- Main Driver -->
                <LinearLayout
                    android:id="@+id/seat_main_driver"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:background="@drawable/rounded_button_bg"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_car_seat"
                        app:tint="#333333"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="主驾"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        android:textColor="#333333"/>
                </LinearLayout>
                
                <!-- Co-Driver -->
                <LinearLayout
                    android:id="@+id/seat_co_driver"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:background="@drawable/rounded_button_bg"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_car_seat"
                        app:tint="#FFFFFF"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="副驾"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        android:textColor="#FFFFFF"/>
                </LinearLayout>
                
                <!-- Rear Left -->
                <LinearLayout
                    android:id="@+id/seat_rear_left"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:background="@drawable/rounded_button_bg"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_car_seat"
                        app:tint="#FFFFFF"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="左后座"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        android:textColor="#FFFFFF"/>
                </LinearLayout>

                <!-- Rear Right -->
                <LinearLayout
                    android:id="@+id/seat_rear_right"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:background="@drawable/rounded_button_bg"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_car_seat"
                        app:tint="#FFFFFF"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="右后座"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        android:textColor="#FFFFFF"/>
                </LinearLayout>
            </GridLayout>
            
            <!-- Middle Column: Timer -->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1">
                
                <NumberPicker
                    android:id="@+id/numberPicker"
                    android:layout_width="wrap_content"
                    android:layout_height="160dp"
                    android:layout_centerHorizontal="true"
                    android:theme="@style/Theme.AppCompat.Light"/>

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="分钟"
                     android:textColor="#FFFFFF"
                     android:layout_toEndOf="@id/numberPicker"
                     android:layout_centerVertical="true"
                     android:layout_marginStart="8dp"/>
                     
            </RelativeLayout>
            
            <!-- Right Column: Scenes -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="center">

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="2">
                    
                    <!-- Scene 1: Quiet -->
                    <FrameLayout
                        android:id="@+id/scene_quiet"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:background="@drawable/rounded_image_bg">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="静谧"
                            android:textColor="#FFFFFF"
                            android:layout_gravity="center"/>
                    </FrameLayout>
                    
                    <!-- Scene 2: Forest -->
                    <FrameLayout
                        android:id="@+id/scene_forest"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:background="@drawable/rounded_image_bg">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="森林"
                            android:textColor="#FFFFFF"
                            android:layout_gravity="center"/>
                    </FrameLayout>
                    
                     <!-- Scene 3: Ocean -->
                    <FrameLayout
                        android:id="@+id/scene_ocean"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:background="@drawable/rounded_image_bg">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="海洋"
                            android:textColor="#FFFFFF"
                            android:layout_gravity="center"/>
                    </FrameLayout>
                    
                     <!-- Scene 4: Rain -->
                    <FrameLayout
                        android:id="@+id/scene_rain"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:background="@drawable/rounded_image_bg">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="绵雨"
                            android:textColor="#FFFFFF"
                            android:layout_gravity="center"/>
                    </FrameLayout>
                    
                </GridLayout>
            </LinearLayout>
            
        </LinearLayout>
        
        <!-- Bottom Area -->
        <LinearLayout
            android:id="@+id/nap_start_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingBottom="24dp">
            
            <TextView
                android:id="@+id/text_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="将于 35分钟 后结束小憩模式"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="16dp"/>
                
            <Button
                android:id="@+id/btn_start_nap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开启小憩"
                android:textColor="#5D4037"
                android:backgroundTint="#F5F5F5"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"/>
                
        </LinearLayout>
        
        <!-- Nap Active Layout (Countdown) -->
        <LinearLayout
            android:id="@+id/nap_active_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">
            
            <TextView
                android:id="@+id/text_countdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="80sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:text="00:00:00" />
                
            <Button
                android:id="@+id/btn_stop_nap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关闭小憩"
                android:textColor="#5D4037"
                android:backgroundTint="#F5F5F5"
                android:layout_marginTop="32dp"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"/>
        </LinearLayout>
        
        <!-- Top Bar (simulated) -->
        <View
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="0dp"
            android:background="@drawable/rounded_button_bg"/>

    </FrameLayout>

</LinearLayout>