<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".Section2_2">

    <!-- Left side container: 1/3 width -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Button 1: Rest -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#A6A6A6">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="休息"
                android:textSize="20sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/view_section_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFFFFF"
            android:alpha="0.5"/>

        <!-- Button 2: Music -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#A6A6A6">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="音乐"
                android:textSize="20sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/view_section21"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFFFFF"
            android:alpha="0.5"/>

        <!-- Button 3: Seat -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#80CBC4">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="座椅"
                android:textSize="20sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/view_section22"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFFFFF"
            android:alpha="0.5"/>

        <!-- Button 4: Light -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#A6A6A6">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="灯光"
                android:textSize="20sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/view_section23"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>

    </LinearLayout>

    <!-- Right side content area: 4/5 width -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:background="#F5F5F5">

        <LinearLayout
            android:id="@+id/right_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Energy Mode -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="座椅放平"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/seat_option_driver"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="主驾"
                        android:background="@drawable/bg_seat_option_selector"
                        android:textColor="@drawable/color_seat_option_selector"/>

                    <TextView
                        android:id="@+id/seat_option_passenger"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="副驾"
                        android:background="@drawable/bg_seat_option_selector"
                        android:textColor="@drawable/color_seat_option_selector"/>
                    
                    <TextView
                        android:id="@+id/seat_option_rear_left"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="后左座"
                        android:background="@drawable/bg_seat_option_selector"
                        android:textColor="@drawable/color_seat_option_selector"/>
                    <TextView
                        android:id="@+id/seat_option_rear_right"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="后右座"
                        android:background="@drawable/bg_seat_option_selector"
                        android:textColor="@drawable/color_seat_option_selector"/>
                </LinearLayout>

                <View
                    android:layout_width="24dp"
                    android:layout_height="match_parent"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="一键躺倒"
                        android:textColor="#666666"
                        android:layout_gravity="center_horizontal"/>

                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="请选择需要放平的座椅位置"
                android:textSize="12sp"
                android:textColor="#999999"/>

            <!-- Power Mode -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="座椅加热"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/seat_heating_driver"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/bg_seat_heating_selector"
                    android:text="主驾" />

                <TextView
                    android:id="@+id/seat_heating_passenger"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/bg_seat_heating_selector"
                    android:text="副驾" />
                
                <TextView
                    android:id="@+id/seat_heating_rear_left"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/bg_seat_heating_selector"
                    android:text="后左座" />
                
                <TextView
                    android:id="@+id/seat_heating_rear_center"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/bg_seat_heating_selector"
                    android:text="后中座" />

                 <TextView
                    android:id="@+id/seat_heating_rear_right"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/bg_seat_heating_selector"
                    android:text="后右座" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="独立座椅加热，随心调节"
                android:textSize="12sp"
                android:textColor="#999999"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"/>

            <!-- Suspension Mode -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="座椅按摩"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333333" />
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/bg_option_unselected"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/massage_option_wave"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="波浪"
                            android:textColor="#666666"/>

                        <TextView
                            android:id="@+id/massage_option_pulse"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="脉冲"
                            android:textColor="#FFFFFF"
                            android:background="@drawable/bg_option_selected"/>

                        <TextView
                            android:id="@+id/massage_option_knead"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="揉捏"
                            android:textColor="#666666"/>

                        <TextView
                            android:id="@+id/massage_option_off"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="滚动"
                            android:textColor="#666666"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="选择您喜欢的按摩模式"
                        android:textSize="12sp"
                        android:textColor="#999999"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="按摩力度"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333333" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/bg_option_unselected"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/massage_intensity_light"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="低"
                            android:textColor="#666666"/>

                        <TextView
                            android:id="@+id/massage_intensity_medium"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="中"
                            android:textColor="#FFFFFF"
                            android:background="@drawable/bg_option_selected"/>

                        <TextView
                            android:id="@+id/massage_intensity_heavy"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="高"
                            android:textColor="#666666"/>
                    </LinearLayout>

                     <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="选择您喜欢的按摩力度"
                        android:textSize="12sp"
                        android:textColor="#999999"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="按摩座椅"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333333" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/massage_seat_driver"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="主驾"
                            android:background="@drawable/bg_seat_option_selector"
                            android:textColor="@drawable/color_seat_option_selector"/>

                        <TextView
                            android:id="@+id/massage_seat_passenger"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="副驾"
                            android:background="@drawable/bg_seat_option_selector"
                            android:textColor="@drawable/color_seat_option_selector"/>

                        <TextView
                            android:id="@+id/massage_seat_rear_left"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="后左座"
                            android:background="@drawable/bg_seat_option_selector"
                            android:textColor="@drawable/color_seat_option_selector"/>

                        <TextView
                            android:id="@+id/massage_seat_rear_right"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="后右座"
                            android:background="@drawable/bg_seat_option_selector"
                            android:textColor="@drawable/color_seat_option_selector"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="选择您想按摩的座椅"
                        android:textSize="12sp"
                        android:textColor="#999999"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:scaleType="centerInside"
                    android:background="#F5F5F5"
                    android:src="@drawable/ic_car_seat" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>