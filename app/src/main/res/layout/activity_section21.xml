<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".Section2_1">

    <!-- Left side container: 1/3 width -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Button 1: Rest -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#A6A6A6">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="休息"
                android:textSize="20sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/view_section_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFFFFF"
            android:alpha="0.5"/>

        <!-- Button 2: Music (Active) -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#FFCC80">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="音乐"
                android:textSize="20sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/view_section21"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFFFFF"
            android:alpha="0.5"/>

        <!-- Button 3: Seat -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#A6A6A6">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="座椅"
                android:textSize="20sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/view_section22"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFFFFF"
            android:alpha="0.5"/>

        <!-- Button 4: Light -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#A6A6A6">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="灯光"
                android:textSize="20sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/view_section23"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>

    </LinearLayout>

    <!-- Right side content area: Karaoke Lyrics View -->
    <RelativeLayout
        android:id="@+id/right_content"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:background="#2C2C2E"
        android:padding="48dp">

        <!-- QQ Music Logo -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_qq_music"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="蓝牙音乐"
                android:textColor="#AAAAAA"
                android:textSize="14sp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- Album Art and Song Info -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_album_art"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:src="@android:color/darker_gray"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/text_song_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Song Title"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/text_artist_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Artist Name"
                android:textColor="#AAAAAA"
                android:textSize="18sp"/>
        </LinearLayout>


        <!-- Bottom Controls -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <!-- Seekbar Area -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp">

                <TextView
                    android:id="@+id/text_current_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="01:42"
                    android:textColor="#AAAAAA"
                    android:textSize="14sp"/>

                <SeekBar
                    android:id="@+id/music_seekbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/text_current_time"
                    android:layout_toStartOf="@+id/text_total_time"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:progress="30"
                    android:progressTint="#FFFFFF"
                    android:thumbTint="#FFFFFF"/>

                <TextView
                    android:id="@+id/text_total_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="04:58"
                    android:textColor="#AAAAAA"
                    android:textSize="14sp"/>
                    
                <!-- K-Song Button -->
                <ImageView
                    android:id="@+id/btn_karaoke"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignStart="@id/music_seekbar"
                    android:layout_above="@id/music_seekbar"
                    android:layout_marginBottom="-8dp"
                    android:src="@drawable/ic_mic"/>
                
            </RelativeLayout>

            <!-- Player Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btn_favorite"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_heart"
                    app:tint="#AAAAAA"/>

                <View android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/btn_shuffle"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_shuffle"
                    android:layout_marginEnd="32dp"
                    app:tint="#AAAAAA"/>

                <ImageView
                    android:id="@+id/btn_prev"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_skip_previous"
                    android:layout_marginEnd="32dp"
                    app:tint="#FFFFFF"/>

                <FrameLayout
                    android:id="@+id/btn_play_pause"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/circle_button_bg">
                    <ImageView
                        android:id="@+id/icon_play_pause"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_play_arrow"
                        app:tint="#2C2C2E"/>
                </FrameLayout>

                <ImageView
                    android:id="@+id/btn_next"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_skip_next"
                    android:layout_marginStart="32dp"
                    app:tint="#FFFFFF"/>

                <ImageView
                    android:id="@+id/btn_download"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_download"
                    android:layout_marginStart="32dp"
                    app:tint="#AAAAAA"/>

                <View android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/btn_playlist"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_playlist_play"
                    app:tint="#AAAAAA"/>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>